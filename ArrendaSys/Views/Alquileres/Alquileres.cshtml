@{
    var usuario = Session["usuarioLogeado"];
    var tipoCuenta = Session["tipoCuenta"];
    var idCuenta = Session["idCuenta"];
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alquileres</title>
</head>

<body>
    <div>
        <span>Alquileres</span>
        <hr />
    </div>

    <div class="col-md12">
        <div class="col-md12">
            <button type="button" class="btn btn-info btn-sm" style="float:right;" onclick="mostrarformulario()"> + Agregar</button>
            <br />
        </div>

    </div>




    <div class="col-md-12" id="formulario" style="display:none">
        

        <div class="row" style="padding-top:6px">



            <div class="col-md-2">
                <br />
                <span>Fecha Alta: </span>
                <br />
                <input type="date" class="form-control" id="fechaAltaAlquiler" />

            </div>

            <div class="col-md-2">
                <br />
                <span>Fecha Baja: </span>
                <br />
                <input type="date" class="form-control" id="fechaBajaAlquiler" />

            </div>

            <div class="col-md-2">
                <br />
                <span>Arrendatario: </span>
                <br />
                <input type="number" class="form-control" id="idArrendatario" placeholder="ingrese el Arrendatario" />

            </div>


            <div class="col-md-2">
                <br />
                <span>Inmueble: </span>
                <br />
                <input type="number" class="form-control" id="idInmueble" placeholder="ingrese el Inmueble" />

            </div>


        </div>


        <div class="col-md-12">
            <br />
            <div>
                <button type="button" class="btn btn-success"  onclick="GuardarAlquiler()"><i class="fas fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-danger" id="btnvolver"><i class=" fa fa-reply"> </i>Volver</button>
                
            </div>



        </div>


    </div>







    <div class="card">
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <table id="alquilereslista" class="table table-bordered display nowrap" cellspacing="0" style="width:100%;">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Fecha Alta</th>
                                    <th>Fecha Baja</th>
                                    <th>Arrendatario</th>
                                    <th>Inmueble</th>
                                    <th>Editar</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
        var user = '@usuario';
    var table;
    (function () {
        CrearTabla();
    })();
    function CrearTabla() {
       
        var idiomaEspanol = {
