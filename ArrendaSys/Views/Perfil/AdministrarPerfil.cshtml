<script>
    @{
        var idCuenta = Session["idCuenta"];
    }
    $(document).ready(function () {
        $('.select2').select2({
            allowClear: false,
            width: '100%',
        });
    });
    var idCuenta = parseInt("@idCuenta");
    function GetUrlId() {
        var hash = window.location.href.slice(window.location.href.lastIndexOf('/') + 1);
        return hash;
    }
    completarDatos();

    function eliminarCuenta() {
        $("#modalEliminar").modal('show');

    }
    function aceptarEliminacion() {
        var id = parseInt(idCuenta);
        $.ajax({
            type: 'Post',
            url: '/Api/Cuenta/eliminarCuenta?idCuenta=' + id,
            success: function (result) {
                window.location.href = "/Login/Logout";
            }
        });
    }
    function completarDatos() {
        $.ajax({
            type: 'Get',
            url: '/Api/Cuenta/ObtenerDatosCuenta?idCuenta=' + idCuenta,
            success: function (result) {
                completarDatosCuenta(result);
                if (result.tipoCuenta == 2) {
                    completarDatosArrendatario(result);
                }
                if (result.tipoCuenta == 3) {
                    completarDatosPropietario(result);
                }
                if (result.tipoCuenta == 4) {
                    completarDatosInmobiliaria(result);
                }
            }
        });
    }

    function completarDatosCuenta(cuentaVM) {
        $("#email").text(cuentaVM.email);
    }

    function completarDatosArrendatario(cuentaVM) {
        $("#tipoCuenta").empty();
        var html = '<option value="-1">Seleccione una opción</option>';
        html = html + '<option value="2" selected>Arrendatario</option>';
        html = html + '<option value="3">Propietario</option>';
        html = html + '<option value="4">Inmobiliaria</option>';
        $("#tipoCuenta").append(html);
        $("#tipoCuenta").change();
        $("#tipoCuenta").attr("disabled", "disabled");
        $("#nombre").text(cuentaVM.arrendatario.nombreArrendatario);
        $("#apellido").text(cuentaVM.arrendatario.apellidoArrendatario);
        $("#documento").text(cuentaVM.arrendatario.nroDocumento);
        $("#telefono").text(cuentaVM.arrendatario.nroTelefono);
        $("#fechaNacimiento").val(cuentaVM.arrendatario.fechaNacimientoStr);
        $("#direccionArr").text(cuentaVM.direccion);
    }
    function completarDatosPropietario(cuentaVM) {
        $("#tipoCuenta").empty();
        var html = '<option value="-1">Seleccione una opción</option>';
        html = html + '<option value="2">Arrendatario</option>';
        html = html + '<option value="3" selected>Propietario</option>';
        html = html + '<option value="4">Inmobiliaria</option>';
        $("#tipoCuenta").append(html);
        $("#tipoCuenta").change();
        $("#tipoCuenta").attr("disabled", "disabled");
        $("#nombrePropietario").text(cuentaVM.propietario.nombrePropietario);
        $("#apellidoPropietario").text(cuentaVM.propietario.apellidoPropietario);
        $("#documentoProp").text(cuentaVM.propietario.numeroDocumentoPropietario);
        $("#telefonoProp").text(cuentaVM.propietario.telefonoPropietario);
        $("#fechaNacimientoProp").val(cuentaVM.propietario.fechaNacimientoStr);
        $("#direccionProp").text(cuentaVM.direccion);
    }
    function completarDatosInmobiliaria(cuentaVM) {
        $("#tipoCuenta").empty();
        var html = '<option value="-1">Seleccione una opción</option>';
        html = html + '<option value="2">Arrendatario</option>';
        html = html + '<option value="3">Propietario</option>';
        html = html + '<option value="4" selected>Inmobiliaria</option>';
        $("#tipoCuenta").append(html);
        $("#tipoCuenta").change();
        $("#tipoCuenta").attr("disabled", "disabled");
        $("#nombreInmo").text(cuentaVM.inmobiliaria.nombreInmobiliaria);
        $("#cuitInmo").text(cuentaVM.inmobiliaria.cuitInmobiliaria);
        $("#telefonoInmo").text(cuentaVM.inmobiliaria.telefonoInmobiliariaStr);
        $("#AltaInscripcionInmo").val(cuentaVM.inmobiliaria.altaInscripcionStr);
        $("#direccionInmo").text(cuentaVM.direccion);
    }

    function cambioTipoCuenta() {
        if ($("#tipoCuenta").val() == 2) {
            $(".arrendatario").show();
            $(".propietario").hide();
            $(".inmobiliaria").hide();
        }
        if ($("#tipoCuenta").val() == 3) {
            $(".propietario").show();
            $(".arrendatario").hide();
            $(".inmobiliaria").hide();
        }
        if ($("#tipoCuenta").val() == 4) {
            $(".inmobiliaria").show();
            $(".arrendatario").hide();
            $(".propietario").hide();
        }
    }


    function GuardarPerfil() {

        if ($("#tipoCuenta").val() == 2) {
            if (ValidarDatos("obligatoriaArr")) {
                var arrendatario = new Object();
                arrendatario.nombreArrendatario = $("#nombre").val();
                arrendatario.apellidoArrendatario = $("#apellido").val();
                arrendatario.fechaNacimiento = $("#fechaNacimiento").val();
                arrendatario.nroDocumento = $("#documento").val();
                arrendatario.nroTelefono = $("#telefono").val();
                arrendatario.direccion = $("#direccionArr").val();
                arrendatario.idCuenta = idCuenta;
                $.ajax({
                    type: 'Post',
                    url: '/Api/Arrendatario/CrearArrendatario',
                    data: arrendatario,
                    success: function (result) {
                        GuardarImagen(idCuenta);
                        window.location.href = "/Cuenta/CambiarTipoCuenta?tipoCuenta=2&id=" + result + "&idCuenta=" + idCuenta;

                    }
                });

            }
        }

        if ($("#tipoCuenta").val() == 3) {
            if (ValidarDatos("obligatoriaProp")) {
                var propietario = new Object();
                propietario.nombrePropietario = $("#nombrePropietario").val();
                propietario.apellidoPropietario = $("#apellidoPropietario").val();
                propietario.fechaNacimiento = $("#fechaNacimientoProp").val();
                propietario.numeroDocumentoPropietario = $("#documentoProp").val();
                propietario.telefonoPropietario = $("#telefonoProp").val();
                propietario.direccion = $("#direccionProp").val();
                propietario.idCuenta = idCuenta;
                $.ajax({
                    type: 'Post',
                    url: '/Api/Propietario/CrearPropietario',
                    data: propietario,
                    success: function (result) {
                        GuardarImagen(idCuenta);
                        window.location.href = "/Cuenta/CambiarTipoCuenta?tipoCuenta=3&id=" + result + "&idCuenta=" + idCuenta;
                    }
                });

            }
        }
        if ($("#tipoCuenta").val() == 4) {
            if (ValidarDatos("obligatoriaInmo")) {
                var inmobiliaria = new Object();
                inmobiliaria.nombreInmobiliaria = $("#nombreInmo").val();
                inmobiliaria.cuitInmobiliaria = $("#cuitInmo").val();
                inmobiliaria.telefonoInmobiliaria = $("#telefonoInmo").val();
                inmobiliaria.altaInscripcion = $("#AltaInscripcionInmo").val();
                inmobiliaria.direccion = $("#direccionInmo").val();
                inmobiliaria.idCuenta = idCuenta;
                $.ajax({
                    type: 'Post',
                    url: '/Api/Inmobiliaria/CrearInmobiliaria',
                    data: inmobiliaria,
                    success: function (result) {
                        GuardarImagen(idCuenta);
                        window.location.href = "/Cuenta/CambiarTipoCuenta?tipoCuenta=4&id=" + result + "&idCuenta=" + idCuenta;
                    }
                });

            }
        }


    }


    $(".obligatoriaArr").keydown(function () {
        var objetoAlert = $("#alert" + $(this).attr("id").toString());
        objetoAlert.clearQueue();
        objetoAlert.empty();
    });
    $(".obligatoriaProp").keydown(function () {
        var objetoAlert = $("#alert" + $(this).attr("id").toString());
        objetoAlert.clearQueue();
        objetoAlert.empty();
    });
    $(".obligatoriaInmo").keydown(function () {
        var objetoAlert = $("#alert" + $(this).attr("id").toString());
        objetoAlert.clearQueue();
        objetoAlert.empty();
    });

    function ValidarDatos(clase) {
        var respuesta = true;
        $("."+clase).each(function (index, result) {
            var alert = "";
            var objeto = $("#" + $(this).attr("id").toString());
            var objetoAlert = $("#alert" + $(this).attr("id").toString());
            if (objeto.val() == "") {
                alert += "<div class='alert alert-danger'>" +
                    "<button type='button' class='close' data-dismiss='alert' aria-label='Close'>" +
                    "<i class='material-icons'>Cerrar</i>" +
                    "</button>" +
                    "<span>Debe completar el campo <b>" + $(this).attr("name").toString() + "</b>.</span>" +
                    "</div>";
                objetoAlert.clearQueue();
                objetoAlert.empty();
                objetoAlert.append(alert)
                respuesta = false;
            }
        });
        return respuesta;
    }

    (function ($) {
        $.fn.inputFilter = function (inputFilter) {
            return this.on("input keydown keyup mousedown mouseup select contextmenu drop", function () {
                if (inputFilter(this.value)) {
                    this.oldValue = this.value;
                    this.oldSelectionStart = this.selectionStart;
                    this.oldSelectionEnd = this.selectionEnd;
                } else if (this.hasOwnProperty("oldValue")) {
                    this.value = this.oldValue;
                    this.setselectionRange(this.oldSelectionstart, this.oldSelectionEnd);
                } else {
                    this.value = "";
                }
            });
        };
    }(jQuery));

